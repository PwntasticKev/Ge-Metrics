{
  "name": "auth-server",
  "version": "1.0.0",
  "description": "Authentication server with tRPC, Drizzle ORM, and JWT",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server-simple.ts",
    "dev:full": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:check": "tsx check-db-connection.ts",
    "test:db": "tsx test-database-crud.ts",
    "test:all-tables": "tsx test-all-tables.ts",
    "test:auth": "tsx test-auth-system.ts",
    "create:demo": "tsx create-demo-user.ts",
    "test:comprehensive": "tsx test-comprehensive-db.ts",
    "db:report": "tsx database-status-report.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "express": "^4.18.2",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.3",
    "stripe": "^14.14.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
