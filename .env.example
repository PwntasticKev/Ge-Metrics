# GE-Metrics Production Environment Variables
# Copy this file to .env and fill in your values

# ===== REQUIRED FOR PRODUCTION =====

# Database Configuration (REQUIRED)
DATABASE_URL="postgresql://username:password@localhost:5432/ge_metrics"
# Unpooled connection for migrations
DATABASE_URL_UNPOOLED="postgresql://username:password@localhost:5432/ge_metrics"
# For Vercel deployment (if different from above)
CORRECT_DATABASE_URL="postgresql://username:password@host:5432/ge_metrics"
CORRECT_DATABASE_URL_UNPOOLED="postgresql://username:password@host:5432/ge_metrics"

# JWT Security (REQUIRED - Generate random 64+ character strings)
JWT_ACCESS_SECRET="your-super-secret-jwt-access-key-minimum-32-characters-required-for-security"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-minimum-32-characters-required-for-security"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration (REQUIRED)
NODE_ENV="production"
PORT="4000"
FRONTEND_URL="https://your-domain.com"

# Stripe Configuration (REQUIRED for billing)
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_from_stripe_dashboard"
STRIPE_PRICE_MONTHLY="price_your_monthly_price_id"
STRIPE_PRICE_YEARLY="price_your_yearly_price_id"
STRIPE_PRODUCT_PREMIUM="prod_your_product_id"

# ===== OPTIONAL BUT RECOMMENDED =====

# AWS Configuration (for SES email + S3 backups)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
S3_BACKUP_BUCKET="ge-metrics-backups"

# Email Configuration
SES_FROM_EMAIL="noreply@your-domain.com"
FROM_EMAIL="noreply@your-domain.com"

# SMTP Fallback (if not using SES)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_USER="your_smtp_user"
SMTP_PASS="your_smtp_password"

# Google OAuth (if using Google login)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# ===== DEVELOPMENT/TESTING ONLY =====

# Local Development Database
LOCAL_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ge_metrics_dev"

# Admin Access (for emergency access)
MASTER_PASSWORD="your_master_admin_password"

# Legacy API Keys (if needed)
OSRS_WIKI_API_KEY="your_api_key_here"
VITE_SENTRY_DSN="https://your-key@sentry.io/project-id"
VITE_API_URL="http://localhost:3000"

# ===== SECURITY NOTES =====

# 1. Never commit .env to git
# 2. Use different secrets for dev/staging/production
# 3. JWT secrets should be 64+ characters for security
# 4. Stripe keys must be from the correct environment
# 5. Database URLs should use SSL in production
# 6. Change all default passwords immediately
# 7. Rotate secrets regularly (monthly)

# ===== ENVIRONMENT SPECIFIC SETTINGS =====

# Development
# NODE_ENV="development"
# FRONTEND_URL="http://localhost:5173"
# STRIPE_SECRET_KEY="sk_test_..." (test key)

# Staging
# NODE_ENV="production"
# FRONTEND_URL="https://staging.your-domain.com"
# STRIPE_SECRET_KEY="sk_test_..." (test key)

# Production
# NODE_ENV="production"
# FRONTEND_URL="https://your-domain.com"
# STRIPE_SECRET_KEY="sk_live_..." (live key)